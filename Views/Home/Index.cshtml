@model Quote
  <h1 class="text-center mt-10 md-10"> Welcome to Quoting Dojo</h1>
        <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <form asp-action="quotes" asp-controller="Home" method="post"> 
            <div class="form-group row">
                <span asp-validation-for="Name"></span>
                <label asp-for="Name" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm" id="colFormLabel"  asp-for="Name" placeholder="name">
                </div>
            </div>
            
            
            <div class="form-group row">
                <span asp-validation-for="Quotecomment"></span>
                <label asp-for="Quotecomment" class="col-sm-2 col-form-label "></label> 
                <div class="col-sm-10">
                <textarea class="form-control form-control-lg" id="colFormLabelLg" placeholder="col-form-label-lg"  asp-for="Quotecomment"> </textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Add my Quotes!</button>  <a href="/quotes" class="btn btn-primary"> Skip to quotes!</a>
            </form>
        </div>
        <div class="col-2"></div>
    </div>